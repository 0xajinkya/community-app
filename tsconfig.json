{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "paths": {
      "@api/*": ["api/*"],
      "@controllers/*": ["controllers/*"],
      "@config/*": ["config/*"],
      "@cron/*": ["cron/*"],
      "@interfaces/*": ["interfaces/*"],
      "@loaders/*": ["loaders/*"],
      "@models/*": ["models/*"],
      "@middlewares/*": ["middlewares/*"],
      "@schema/*": ["schema/*"],
      "@services/*": ["services/*"],
      "@universe/*": ["universe/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
